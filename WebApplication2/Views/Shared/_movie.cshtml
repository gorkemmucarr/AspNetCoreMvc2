@model Movie

<div class="card mb-3" style="max-width: 540px;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="/img/@Model.ImgUrl" class="card-img" alt="@Model.Title">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                    <p>
                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@Model.MovieId" class="btn btn-primary">Details</a>
                        <a asp-controller="Movies" asp-action="Edit" asp-route-id="@Model.MovieId"  class="btn btn-primary">Edit</a>
                    </p>

                    <form asp-controller="Movies" asp-action="Delete" method="post">
                        <input type="hidden" name="MovieId" value="@Model.MovieId"/>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                
            </div>
        </div>
    </div>
</div>





